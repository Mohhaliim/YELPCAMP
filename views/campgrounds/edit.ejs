<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST" novalidate
                class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="Campground[title]" required id="title"
                        value="<%= campground.title %> ">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" required type="text" name="Campground[location]" id="location"
                        value="<%= campground.location %> ">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" required type="text" name="Campground[image]" id="image"
                        value="<%= campground.image %> ">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" required type="text" name="Campground[description]"
                        id="description"><%= campground.description %></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" required id="price" aria-label="price"
                            name="Campground[price]" value="<%= campground.price %> ">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>

            </form>
            <a href="/campgrouds">All Campgrounds</a>
        </div>
    </div>